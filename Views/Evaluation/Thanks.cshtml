@{
    ViewData["Title"] = "Tack för din utvärdering";
    var courseTitle = ViewBag.CourseTitle as string ?? "kursen";
}

<div class="text-center mt-5">
    <h2 class="text-success">Tack för din feedback!</h2>
    <p class="lead">Din utvärdering för <strong>@courseTitle</strong> har skickats in.</p>

    <a class="btn btn-primary mt-3" asp-controller="Course" asp-action="Index">Tillbaka till kurser</a>
</div>
