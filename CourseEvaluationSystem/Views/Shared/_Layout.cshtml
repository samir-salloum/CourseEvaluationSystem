@using Microsoft.AspNetCore.Identity
@using CourseEvaluationSystem.Models
@using Microsoft.EntityFrameworkCore
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
@inject CourseEvaluationSystem.Data.ApplicationDbContext _context

@{
    var isAdmin = false;
    if (SignInManager.IsSignedIn(User))
    {
        var user = await UserManager.GetUserAsync(User);
        if (user != null && await UserManager.IsInRoleAsync(user, "Admin"))
        {
            isAdmin = true;
        }
    }

    var allCourses = await _context.Courses.AsNoTracking().OrderBy(c => c.Title).ToListAsync();
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CourseEvaluationSystem</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CourseEvaluationSystem.styles.css" asp-append-version="true" />
</head>
<body id="pageBody">
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary shadow-sm">
            <div class="container">
                <a class="navbar-brand fw-bold" asp-area="" asp-controller="Home" asp-action="Index">CourseEvaluationSystem</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="Home" asp-action="Index">Hem</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>

                        @if (allCourses.Any())
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-white" href="#" id="kursDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Kurser
                                </a>
                                <ul class="dropdown-menu">
                                    @foreach (var course in allCourses)
                                    {
                                        <li>
                                            <a class="dropdown-item" asp-controller="Course" asp-action="Details" asp-route-id="@course.Id">
                                                @course.Title
                                            </a>
                                        </li>
                                    }
                                </ul>
                            </li>
                        }

                        @if (isAdmin)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-controller="Admin" asp-action="Index">Adminpanel</a>
                            </li>
                        }

                        <li class="nav-item">
                            <button id="darkModeToggle" class="btn btn-outline-light btn-sm ms-2">
                                🌓 Växla tema
                            </button>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <div class="container mt-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="bg-light text-muted border-top py-3 mt-auto">
        <div class="container text-center">
            &copy; 2025 - CourseEvaluationSystem - <a asp-controller="Home" asp-action="Privacy">Integritet</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
